    }

    .custom-select select:focus {
      background: transparent;
      border: 1px solid #c75a5a;
      border-radius: 5px;
    }

    .custom-select::after {
      content: "";
      position: absolute;
      pointer-events: none;
      top: 50%;
      right: 10px;
      transform: translate(0, -50%);
      width: 12px;
      height: 12px;
      background-color: #fd0202;
      clip-path: polygon(
